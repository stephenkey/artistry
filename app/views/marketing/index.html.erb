<div class="row">
  <div class="col-sm-12 col-md-8 offset-md-2 col-lg-4 offset-lg-4 py-5">
    <h1>
      Welcome to Artistry
    </h1>
    <p>
      Easily manage all your albums.
    </p>

    <%= form_for(@user, url: '/account', html: { class: '' }) do |f| %>

      <div class="form-group">
        <label class="sr-only">Name</label>
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
      </div>

      <div class="form-group">
        <label class="sr-only">Email</label>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <label class="sr-only">Email</label>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>

      <button type="submit" class="btn btn-primary">Create Account</button>
      <a href="/login" class="btn btn-link float-right">Login</a>

    <% end %>

  </div>
</div>
